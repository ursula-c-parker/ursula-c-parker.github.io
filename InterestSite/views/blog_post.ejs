<!doctype html>

<%- include('global/header'); %>
<%- include('global/navbar'); %>
  <script>
    document.title = "Blog Post"
    var element = document.getElementById("blogs");
    element.classList.add("active");
  </script>

  <div class="default">

    <div class="row">
      <div class="col s12">
        <div class="card grey darken-3">
          <div class="card-content white-text">
            <span class="card-title green-text"><%= data.user %></span>
            <h4><%= data.title %></h4>
            <% let split = data.content.split("\n") %>
            <% for(let i=0; i<split.length; i++) { %>
              <p><%= split[i] %></p>
              <br />
            <%}%>
          </div>
          <div class="card-action green-text">
            <p>Likes: <%= data.likes %></p>
            <p>Tags: <%= data.tags %></p>
            <p>Posted on: <%= data.date %></p>
          </div>
        </div>
      </div>
    </div>

  </div>
  <%- include('global/footer'); %>
